<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">
    <RelativeLayout
            android:id="@+id/relative_layout_survey_image_patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin">
        <!--title photo-->
        <TextView
                android:id="@+id/text_view_home_care_detail_title_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:padding="10dp"
                android:fontFamily="@font/gs_medium"
                tools:text="Image"
                android:textColor="@color/colorText"
                android:textSize="@dimen/extra_large_font_size"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_home_care_detail_title_images"
                android:layout_marginBottom="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/medium_margin"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/tiny_margin"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/image_view_detail_homecare_patient_photo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    tools:src="@drawable/ic_attach_file_black_24dp"
            />
            <!--title photo-->
            <TextView
                    android:id="@+id/text_view_home_care_detail_photo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/gs_regular"
                    android:text="Title image"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/extra_large_font_size"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>